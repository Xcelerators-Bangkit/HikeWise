<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.bookingopentrip.detailbooking.DetailOpenTripActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutDetailTrip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/second_primary">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="@string/detail_hiking"
            android:focusable="false"
            app:titleTextAppearance="@style/MyToolbarTitle"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appBarLayoutDetailTrip"
        app:cardCornerRadius="5dp">
        <TextView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="Name :"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary"/>
        <TextView
            android:id="@id/edtName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="75dp"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/primary"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_openTrip"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@id/card_name"
        app:layout_constraintStart_toStartOf="@id/card_name"
        app:layout_constraintTop_toBottomOf="@id/card_name"
        app:cardCornerRadius="5dp">
        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="Open Trip :"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary"/>
        <TextView
            android:id="@+id/edtOpenTripName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="105dp"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/primary"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_mountainName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@id/card_openTrip"
        app:layout_constraintStart_toStartOf="@id/card_openTrip"
        app:layout_constraintTop_toBottomOf="@id/card_openTrip"
        app:cardCornerRadius="5dp">
        <TextView
            android:layout_width="85dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="Mountain :"
            android:gravity="start|center_vertical"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/primary"/>
        <TextView
            android:id="@+id/edtMountainName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="102dp"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/primary"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_price"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="@id/card_mountainName"
        app:layout_constraintStart_toStartOf="@id/card_mountainName"
        app:layout_constraintTop_toBottomOf="@id/card_mountainName"
        app:cardCornerRadius="5dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="5dp"
            android:text="Price : Rp."
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary"/>
        <TextView
            android:id="@+id/edtPrice"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="90dp"
            android:layout_marginEnd="10dp"
            android:textSize="16sp"
            android:gravity="start|center_vertical"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/primary"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnDelete"
        android:layout_width="0dp"
        android:layout_height="54dp"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="@string/delete"
        android:textColor="@color/white"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>